/* pages/result/result.wxss */
page{
  background-color: rgb(218, 89, 58);
  text-align: center;
  font-family:'楷体'
}
.item{
  display: inline-block;
  background-color: white;
  border-radius: 4px;
  height: 120rpx;
  width: 90%;
  margin-top: 30rpx;
}
.border{
  display: inline-block;
  height: 100rpx;
  width: 97%;
  margin-top: 10rpx;
  border: solid #DDC241 1px;
  position: relative
}
.square{
  width: 12rpx;
  height: 12rpx;
  background-color: #DDC241;
  position: absolute
}
.square1{
  top: 0;
  left: 0  
}
.square2{
  top: 0;
  right: 0  
}
.square3{
  bottom: 0;
  left: 0  
}
.square4{
  bottom: 0;
  right: 0  
}
.item>view>view>view{
  margin: 10rpx 16rpx 0 16rpx
}
.left{
  float: left;
  text-align: left
}
.right{
  float: right
}
.text-red{
  color: #A86C62
}

.share{
  display: inline;
  padding: 0;
  line-height: 1;
}